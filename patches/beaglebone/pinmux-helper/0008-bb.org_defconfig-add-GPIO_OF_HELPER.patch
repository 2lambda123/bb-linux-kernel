From: Jason Kridner <jdk@ti.com>
Date: Thu, 4 Sep 2014 19:12:47 +0000
Subject: [PATCH 8/8] bb.org_defconfig: add GPIO_OF_HELPER

---
 arch/arm/configs/bb.org_defconfig | 1 +
 drivers/gpio/Kconfig              | 2 +-
 2 files changed, 2 insertions(+), 1 deletion(-)

diff --git a/arch/arm/configs/bb.org_defconfig b/arch/arm/configs/bb.org_defconfig
index 58d1df7..9cda009 100644
--- a/arch/arm/configs/bb.org_defconfig
+++ b/arch/arm/configs/bb.org_defconfig
@@ -1927,6 +1927,7 @@ CONFIG_GPIO_DEVRES=y
 CONFIG_OF_GPIO=y
 # CONFIG_DEBUG_GPIO is not set
 CONFIG_GPIO_SYSFS=y
+CONFIG_GPIO_OF_HELPER=y
 
 #
 # Memory mapped GPIO drivers:
diff --git a/drivers/gpio/Kconfig b/drivers/gpio/Kconfig
index 9b54bdd..ed49035 100644
--- a/drivers/gpio/Kconfig
+++ b/drivers/gpio/Kconfig
@@ -83,7 +83,7 @@ config GPIO_SYSFS
 
 config GPIO_OF_HELPER
 	bool "GPIO OF helper device"
-	depends on OF_GPIO && EXPERIMENTAL
+	depends on OF_GPIO
 	help
 	  Say Y here to add an GPIO OF helper driver
 
